{
    "data_setups":{
        "root": "./data",
        "dataset_name": "cifar10",
        "batch_size": 50,
        "n_clients": 100,
        "partition": {
            "method": "sharding",
            "shard_ratio": 0.2
        }
    },
    "train_setups":{
        "algo": {
            "name": "fedntd",
            "params": {"loss_type": "ntd", "tau": 1, "beta": 1, "k": -1, "lam": 1}
        },
        "scenario": {
            "n_rounds": 400,
            "sample_ratio": 0.1,
            "local_epochs": 5,
            "device": "cuda:0"
        },
        "model":{
            "name": "fedavg_cifar",
            "params": {}
        },
        "optimizer":{
            "params": {"lr": 0.01, "momentum":0.9, "weight_decay": 1e-5}
        },
        "scheduler":{
            "enabled": true,
            "name": "step",
            "params": {"gamma":0.99, "step_size": 1}
        },
        "evaluator":{
            "enabled": false,
            "params": {"predictions": true, 
                       "weights": false, 
                       "features":false}
        },
        "seed": 2021
    },
    "wandb_setups":{
        "project": "ICML2023",
        "group": "practice",
        "save_code": false,
        "tags": [],
        "name": "fedntd",
        "notes": "",
        "entity": "curisam"        
    }
}
